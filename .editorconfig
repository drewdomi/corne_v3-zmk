# top-most EditorConfig file
root = true

# Apply to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# For DTS and related files
[*.dtsi]
indent_style = space
indent_size = 4

[*.dts]
indent_style = space
indent_size = 4

# For build config files
[*.conf]
indent_style = space
indent_size = 4

# For devicetree overlays
[*.overlay]
indent_style = space
indent_size = 4

# Optional for C header-like includes
[*.h]
indent_style = space
indent_size = 4

# Optional for Kconfig or west.yml files
[*.yml]
indent_style = space
indent_size = 2

# Optional for Kconfig files
[Kconfig*]
indent_style = space
indent_size = 4
